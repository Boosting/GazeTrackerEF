<Window x:Class="App1ForEF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid ShowGridLines="True" Width="Auto" Height="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Name="B00"  FontSize="12" FontWeight="Bold" Grid.Row="0" Grid.Column="0"
                 MouseMove="Button_MouseMove">Button 00</Button>
        <Button Name="B01"  FontSize="12" FontWeight="Bold" Grid.Row="0" Grid.Column="1"
                MouseMove="Button_MouseMove">Button 01</Button>
        <Button Name="B10"  FontSize="12" FontWeight="Bold" Grid.Row="1" Grid.Column="0"
                MouseMove="Button_MouseMove">Button 10</Button>
        <Button Name="B11"  FontSize="12" FontWeight="Bold" Grid.Row="1" Grid.Column="1"
                MouseMove="Button_MouseMove">Button 11</Button>
    </Grid>
</Window>
